DATABASE_URL="file:./dev.db"

# ==================== コンプライアンス窓口設定 ====================

# 医療職員管理システムAPI接続設定（2025年9月24日更新）
MEDICAL_SYSTEM_API_BASE="https://voicedrive.ai/api/v2"
MEDICAL_SYSTEM_API_ENDPOINT="/compliance"
COMPLIANCE_API_KEY="voicedrive_compliance_api_key_2025"

# 暗号化設定
ENCRYPTION_KEY="64文字のhex形式キー（本番環境では実際のキーに置き換え）"
ENCRYPTION_KEY_ID="voicedrive_key_2025"
ENCRYPTION_ALGORITHM="AES-256-GCM"

# 同期設定
SYNC_INTERVAL="15"  # 分単位
MAX_RETRIES="3"
RETRY_BACKOFF="exponential"

# セキュリティ設定
JWT_SECRET="jwt_secret_key_for_production"
JWT_EXPIRES_IN="1h"
MFA_ENABLED="true"

# 監査ログ設定
AUDIT_LOG_RETENTION_DAYS="2555"  # 7年間保存
AUDIT_LOG_HASH_ALGORITHM="SHA-512"

# 通知設定
NOTIFICATION_EMAIL_ENABLED="true"
NOTIFICATION_TEAMS_ENABLED="true"
NOTIFICATION_SLACK_ENABLED="false"

# 環境設定
NODE_ENV="development"
API_VERSION="v2"

