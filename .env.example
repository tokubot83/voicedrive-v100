# VoiceDrive ハイブリッド統合環境設定
# 本番環境では適切な値に置き換えてください

# ==============================================
# 基本API設定
# ==============================================
VITE_API_BASE_URL=http://localhost:3001
VITE_API_KEY=dev_voicedrive_2025

# ==============================================
# MCP統合設定
# ==============================================
VITE_MCP_ENDPOINT=http://localhost:8080
VITE_MCP_API_KEY=dev_mcp_integration_2025
VITE_ENABLE_MCP_INTEGRATION=true

# MCP接続設定
VITE_MCP_TIMEOUT=10000
VITE_MCP_RETRY_ATTEMPTS=3
VITE_MCP_HEALTH_CHECK_INTERVAL=60000

# ==============================================
# 共通データベースAPI統合設定
# ==============================================
VITE_SHARED_DB_API_URL=http://localhost:3002
VITE_SHARED_DB_API_KEY=dev_shared_db_2025

# 共通DB接続設定
VITE_SHARED_DB_TIMEOUT=30000
VITE_SHARED_DB_RETRY_ATTEMPTS=3
VITE_SHARED_DB_ENABLE_FAILOVER=true

# ==============================================
# ハイブリッド統合設定
# ==============================================
# 統合モード: mcp_only | api_only | hybrid | failover
VITE_INTEGRATION_MODE=hybrid

# 優先接続方式: mcp | api
VITE_PREFERRED_METHOD=mcp

# MCP・API使い分け設定
VITE_ENABLE_API_FALLBACK=true
VITE_ENABLE_NOTIFICATION_OPTIMIZATION=true
VITE_ENABLE_HYBRID_AUDIT_LOGGING=true

# ==============================================
# 通知設定
# ==============================================
VITE_PUSH_NOTIFICATION_ENDPOINT=http://localhost:3001/api/push
VITE_EMAIL_NOTIFICATION_ENDPOINT=http://localhost:3001/api/email

# 通知タイミング最適化
VITE_ENABLE_SMART_NOTIFICATION_TIMING=true
VITE_DEFAULT_NOTIFICATION_DELAY=60000

# ==============================================
# セキュリティ設定
# ==============================================
# JWT設定
VITE_JWT_SECRET=your_jwt_secret_here
VITE_JWT_EXPIRES_IN=24h

# API Rate Limiting
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_WINDOW=3600

# ==============================================
# 監査・ログ設定
# ==============================================
VITE_ENABLE_AUDIT_LOGGING=true
VITE_LOG_LEVEL=info
VITE_ENABLE_ERROR_TRACKING=true

# 重要操作監査設定
VITE_AUDIT_OPERATIONS=booking_creation,booking_cancellation,evaluation_notification,user_sync

# ==============================================
# デバッグ・開発設定
# ==============================================
VITE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_NETWORK_LOGS=false

# モック設定
VITE_ENABLE_MOCK_MCP=false
VITE_ENABLE_MOCK_API=false

# ==============================================
# パフォーマンス設定
# ==============================================
# キャッシュ設定
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000

# バッチ処理設定
VITE_BATCH_SIZE=50
VITE_BATCH_INTERVAL=5000

# ==============================================
# エラーハンドリング設定
# ==============================================
VITE_ERROR_RETRY_ATTEMPTS=3
VITE_ERROR_RETRY_DELAY=1000
VITE_ENABLE_GRACEFUL_DEGRADATION=true

# フェイルオーバー設定
VITE_FAILOVER_THRESHOLD=3
VITE_CIRCUIT_BREAKER_TIMEOUT=30000

# ==============================================
# 本番環境設定（本番時のみ使用）
# ==============================================
# VITE_API_BASE_URL=https://api.voicedrive.com
# VITE_MCP_ENDPOINT=https://mcp.medical-system.com
# VITE_SHARED_DB_API_URL=https://shared-db.medical-system.com
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error