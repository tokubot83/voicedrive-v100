# VoiceDrive Environment Variables

# Database Settings
DATABASE_URL="file:./dev.db"                  # SQLite for development
# DATABASE_URL="postgresql://user:password@host:port/database?schema=public"  # For production

# API Settings
REACT_APP_API_URL=http://localhost:3001/api   # API endpoint

# LLM Moderation API Settings
# Medical Team's Llama 3.2 8B API Endpoint
REACT_APP_LLM_API_ENDPOINT=http://localhost:8000/api/moderate
REACT_APP_LLM_API_KEY=your-api-key-here

# LLM API Configuration
REACT_APP_LLM_TIMEOUT=3000                    # Timeout in milliseconds (default: 3000ms)
REACT_APP_LLM_RETRY_ATTEMPTS=2                # Number of retry attempts (default: 2)
REACT_APP_LLM_CACHE_DURATION=300000           # Cache duration in milliseconds (default: 5min)

# Feature Flags
REACT_APP_DISABLE_LLM=false                   # Set to 'true' to disable LLM moderation (client-side only)

# Medical Team Integration (職員カルテシステム連携)
REACT_APP_MEDICAL_API_URL=https://api.staff-chart.example.com  # 職員カルテシステムAPIエンドポイント
REACT_APP_MEDICAL_API_TOKEN=your-medical-api-token-here        # APIトークン
REACT_APP_MEDICAL_STATS_WEBHOOK_URL=https://api.staff-chart.example.com/api/voicedrive/stats  # 統計送信Webhook URL
REACT_APP_MEDICAL_WEBHOOK_SECRET=your-webhook-secret-key       # Webhook署名用シークレットキー

# VoiceDrive API Settings (職員カルテシステムからの受信用)
VOICEDRIVE_API_TOKEN=your-voicedrive-api-token-here            # 職員カルテシステムからのリクエスト認証用トークン
VOICEDRIVE_API_ENDPOINT=http://localhost:4000                  # VoiceDrive APIエンドポイント（ローカル開発）
# VOICEDRIVE_API_ENDPOINT=https://api.voicedrive.example.com   # Production環境

# Development Settings
REACT_APP_USE_MOCK_LLM=true                   # Use mock LLM for development (before Medical Team API is ready)
