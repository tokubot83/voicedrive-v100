# ===========================================
# VoiceDrive アプリケーション設定
# ===========================================
VITE_APP_NAME=VoiceDrive
VITE_APP_VERSION=3.0.0
VITE_APP_ENV=production
VITE_API_TIMEOUT=10000

# ===========================================
# 医療システムAPI設定（本番）
# ===========================================
# APIエンドポイント
VITE_MEDICAL_API_URL=https://api.medical-prod.example.jp
VITE_MEDICAL_API_VERSION=v1

# 認証情報（Slackで別途共有される実際の値に置換）
VITE_MEDICAL_API_TOKEN=prod_vd_key_[REPLACE_WITH_ACTUAL_TOKEN]

# API エンドポイント
VITE_CALCULATE_LEVEL_ENDPOINT=/api/v1/calculate-level
VITE_POSITION_MAPPING_ENDPOINT=/api/v1/facilities/{facilityId}/position-mapping

# ===========================================
# Webhook設定
# ===========================================
# VoiceDrive Webhook受信URL
VITE_WEBHOOK_RECEIVE_URL=https://api.voicedrive-prod.example.jp/webhooks/medical

# Webhook署名シークレット（Slackで別途共有される実際の値に置換）
VITE_WEBHOOK_SECRET=prod_webhook_[REPLACE_WITH_ACTUAL_SECRET]

# Webhookタイムアウト設定
VITE_WEBHOOK_TIMEOUT=30000
VITE_WEBHOOK_RETRY_COUNT=3

# ===========================================
# 施設ID設定
# ===========================================
# デフォルト施設
VITE_DEFAULT_FACILITY_ID=obara-hospital

# 各施設のID
VITE_OBARA_FACILITY_ID=obara-hospital
VITE_TATEGAMI_FACILITY_ID=tategami-rehabilitation

# ===========================================
# セキュリティ設定
# ===========================================
# CORS設定
VITE_ALLOWED_ORIGINS=https://voicedrive-prod.example.jp,https://medical-prod.example.jp

# セッション設定
VITE_SESSION_TIMEOUT=3600000  # 60分
VITE_SESSION_REFRESH_THRESHOLD=300000  # 5分前に更新

# ===========================================
# 監視・ログ設定
# ===========================================
# ログレベル
VITE_LOG_LEVEL=info

# エラー通知
VITE_ERROR_NOTIFICATION_ENABLED=true
VITE_ERROR_NOTIFICATION_WEBHOOK=[Slack Webhook URL]

# パフォーマンス監視
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1  # 10%サンプリング

# ===========================================
# キャッシュ設定
# ===========================================
# 権限キャッシュ
VITE_PERMISSION_CACHE_TTL=900000  # 15分
VITE_PERMISSION_CACHE_MAX_SIZE=1000

# APIレスポンスキャッシュ
VITE_API_CACHE_TTL=300000  # 5分
VITE_API_CACHE_MAX_SIZE=500

# ===========================================
# フィーチャーフラグ
# ===========================================
# Phase 3 機能
VITE_FEATURE_FACILITY_PERMISSION=true
VITE_FEATURE_POSITION_MAPPING=true
VITE_FEATURE_WEBHOOK_INTEGRATION=true

# 特殊ケース対応（10/1会議で承認）
VITE_FEATURE_SPECIAL_CASE_HANDLING=true

# ===========================================
# デバッグ設定（本番では無効）
# ===========================================
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_API_LOGGING=false
VITE_ENABLE_WEBHOOK_LOGS=false

# ===========================================
# バックアップ設定
# ===========================================
VITE_BACKUP_ENABLED=true
VITE_BACKUP_RETENTION_DAYS=30
VITE_BACKUP_S3_BUCKET=voicedrive-backups-prod

# ===========================================
# 注意事項
# ===========================================
# 1. この設定ファイルは本番環境専用です
# 2. トークンとシークレットは実際の値に置換してください
# 3. このファイルをGitにコミットしないでください
# 4. デプロイ時にCI/CDパイプラインで自動設定されます
# 5. 変更時は必ず両チームリーダーの承認を得てください

